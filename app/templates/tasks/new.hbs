<form class="editable-task">
    {{input type="text" class="editable-task__header-input" value=title placeholder="Add Task Title..."}}
    {{input type="date" class="editable-task__due-date" value=date }}
    {{textarea class="editable-task__textarea" value=description placeholder="Describe Task..."}}
    <div class="editable-task__actions">
        <button {{action 'addTask' task.id}} type="submit" class="editable-task__btn editable-task__btn--save">Save</button>
    </div>
</form>