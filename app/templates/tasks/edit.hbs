<form class="editable-task">
    <div class="editable-task__card-type">Edit Task</div>
    {{input type="text" class="editable-task__header-input" value=model.title placeholder="Add Task Title..."}}

    {{input type="date" class="editable-task__due-date" value=model.date }}
    
    <div class="editable-task__textarea">
        {{textarea value=model.description placeholder="Describe Task..."}}
    </div>
    
    <div class="editable-task__actions">
        <button {{action 'addTask' task.id}} type="submit" class="editable-task__btn editable-task__btn--save">Save</button>
    </div>
</form>